<script>

    $(document).on('submit', function (event) {

        RegisterUser();
        event.preventDefault();
    });

    function RegisterUser() {
        debugger;
        var FirstName = $("#FirstName").val();
        var LastName = $("#LastName").val();
        var Email = $("#Email").val();
        var contact = $("#Contact").val();
        var FullAddress = $("#FullAddress").val();
        var PassWord = $("#PassWord").val();

        if (FirstName == "") {
            $("#dvMessage").html("Please enter First Name");
            return false;
        }
        else if (LastName = "") {
            $("#dvMessage").html("Please enter Last Name");
            return false;
        }
        else if (Email == "") {
            $("#dvMessage").html("Please enter Email");
            return false;
        }
        else if (contact == "") {
            $("#dvMessage").html("Please enter contact");
            return false;
        }
        else if (PassWord == "") {
            $("#dvMessage").html("Please enter PassWord");
            return false;
        }
        else if (FullAddress == "") {
            $("#dvMessage").html("Please enter FullAddress");
            return false;
        }
        else {
            $('#AjaxLoader').show();
            setTimeout(
                function () {
                    $.ajax({
                        type: "POST",
                        url: "/AddAgent/SaveAgent",
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        async: false,
                        data: '{"FirstName":"' + FirstName + '","UserEmail": "' + Email + '","Address": "' + FullAddress + '", "LastName": "' + LastName + '","contact": "' + contact + '", "Password": "' + PassWord + '" }',
                        success: function (response) {
                            if (response == "success") {
                                window.location.href = "/Login/Login";
                                $("#dvMessage").html("Please wait ...");
                                return false;
                            }
                            else {
                                $('#AjaxLoader').hide();
                                $("#dvMessage").html("Invalid Credentials");
                            }
                        },

                        failure: function (response) {
                            $('#AjaxLoader').hide();
                            JsonOutput = (response.responseText);
                        },
                        error: function (response) {
                            $('#AjaxLoader').hide();
                            JsonOutput = (response.responseText);
                        }
                    });
                }, 100);
        }
    }
</script>