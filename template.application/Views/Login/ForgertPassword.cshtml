@model template.application.Models.Login.LoginModels;

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>MyPay Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/register/image/favicon.png">
    <!-- owl.carousel css -->
    <link rel="stylesheet" href="~/register/libs/owl.carousel/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="~/register/libs/owl.carousel/assets/owl.theme.default.min.css">
    <!-- Bootstrap Css -->
    <link href="~/register/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/register/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/register/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
</head>

<body class="auth-body-bg">
    <div>
        <div class="container-fluid p-0">
            <div class="row g-0">
                <div class="col-xl-9 d-none d-lg-block" style="position: fixed;">
                    <div class="auth-full-bg pt-lg-5 p-4">
                        <div class="w-100">
                            <div class="bg-overlay"></div>
                            <div class="d-flex h-100 flex-column">
                                <div class="p-4 mt-auto">
                                    <div class="row justify-content-center">
                                        <div class="col-lg-7">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end col -->
                <div class="col-xl-3" style="position: absolute;right: 0; ">
                    <div class="auth-full-page-content p-md-5 p-4">
                        <div class="w-100">

                            <div class="d-flex flex-column h-100">
                                <div class="mb-4 mb-md-5">
                                    <a href="index.php" class="d-block auth-logo">
                                        <img src="assets/images/logo-dark.png" alt="" height="38" class="auth-logo-dark">
                                        <img src="assets/images/logo-light.png" alt="" height="38" class="auth-logo-light">
                                    </a>
                                </div>
                                <div class="my-auto">
                                    <div>
                                        <h2 class="text-warning">Reset Password</h2>
                                        <p class="text-muted">Please enter your registered phone number</p>
                                    </div>
                                    <div class="mt-3">
                                        <div class="alert alert-success text-center mb-4" role="alert">
                                            Enter your registered Phone and OTP will be sent to you!
                                        </div>
                                        <form action="/Web">
                                            <div class="mb-3">
                                                <label for="username" class="form-label">Phone Number</label>
                                                <input type="text" class="form-control" id="username" placeholder="Enter Number">
                                            </div>

                                            <div class="text-center">
                                                <a class="btn btn-outline-primary w-md waves-effect waves-light" href="login.html">Back</a>
                                                <a class="btn btn-primary w-md waves-effect waves-light" href="/Login/OTP">Send OTP</a>
                                            </div>
                                        </form>
                                        <div class="mt-3 text-center">
                                            <p>Don't have an account ? <a href="register.html" class="fw-medium text-warning"> Signup now </a> </p>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-3 mt-md-5 text-center footer-login" style="position: absolute;bottom: 0;">
                                    <p class="mb-0">© <script>document.write(new Date().getFullYear())</script> MyPay. Powered <i class="mdi mdi-flash text-danger"></i> by Smartcard Nepal</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JAVASCRIPT -->
    <script src="~/register/boostrap/lib/jquery/jquery.min.js"></script>
    <script src="~/register/boostrap/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/register/boostrap/lib/metismenu/metisMenu.min.js"></script>
    <script src="~/register/boostrap/lib/simplebar/simplebar.min.js"></script>
    <script src="~/register/boostrap/lib/node-waves/waves.min.js"></script>
    <!-- owl.carousel js -->
    <script src="assets/libs/owl.carousel/owl.carousel.min.js"></script>
    <!-- auth-2-carousel init -->
    <script src="~/register/pages/auth-2-carousel.init.js"></script>
    <!-- App js -->
    <script src="~/register/js/app.js"></script>
</body>
</html>